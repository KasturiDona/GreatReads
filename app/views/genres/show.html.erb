<h2><%= @genre.name %></h2>

<!-- show page for a genre. Each genre has a set of books -->
<p><%= pluralize(@genre.books.count, 'Book') %>
<ul>
  <% @genre.books.each do |book| %>
      <li>
        <%= link_to book.title, book %>
      </li>
  <% end %>
</ul>
</p>

<!-- an admin can edit / delete a genre -->
<% if @current_user.admin? %>
	<div class="controls">
		<br><br>
		<li><%= link_to 'Edit', edit_genre_path(@genre) %></li>
		<li><%= link_to 'Delete', @genre, :method => 'delete', :data => { :confirm => "Are you sure?" } %></li>
		<li><%= link_to 'Back', genres_path %></li>
	</div>
<% end %>