<!-- form for adding/editing a review -->
<%= form_for @review, :url => @url do |f| %>

	<div class="form-group">
		<%= f.label :description %>
		<%= f.text_area :description, placeholder: "Add a review", :class=> "form-control text" %>
	</div>
	
	<div class="form-group">
		<%= f.label :rating %>
		<%= f.number_field :rating, in: 0..5, placeholder: "Rate the book ( 0 - 5 )", :class=> "form-control" %>
	</div>

	<%= f.submit :class => 'submit btn btn-primary'%>

<% end %>

