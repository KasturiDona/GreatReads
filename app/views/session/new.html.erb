<h2>Login</h2>

<%= form_tag '/login' do %>
	<p>
		<%= label_tag :email %>
		<%= text_field_tag :email %>
	</p>
	<p>
		<%= label_tag :password %>
		<%= password_field_tag :password %>
	</p>
	</p>
		<%= label_tag :login_to_great_reads %>
		<%= submit_tag "Login", { :class => 'submit' } %>
	</p>
<% end %>