
<%= form_for @author do |f| %>

	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, placeholder: "Name of the Author", :required => true, :class=> "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :pen_name %>
		<%= f.text_field :pen_name, placeholder: "Pen name if any", :class=> "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :dob, 'Date of birth' %>
		<%= f.text_field :dob, :placeholder => 'YYYY-MM-DD', :class=> "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :dod, 'Date of death' %>
		<%= f.text_field :dod, :placeholder => 'YYYY-MM-DD', :class=> "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :nationality %>
		<%= f.text_field :nationality, placeholder: "Nationality", :class=> "form-control" %>
	</div>
	<div class="form-group">
		<%= f.label :image %>
		<%= f.url_field :image, placeholder: "Image URL", :class=> "form-control" %>
	</div>

	<%= f.submit :class => 'submit btn btn-primary' %>

<% end %>
