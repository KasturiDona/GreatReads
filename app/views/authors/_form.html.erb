<%= form_for @author do |f| %>

	<p>
		<%= f.label :name %>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :pen_name %>
		<%= f.text_field :pen_name %>
	</p>
	<p>
		<%= f.label :dob, 'Date of birth' %>
		<%= f.text_field :dob, :placeholder => 'YYYY-MM-DD' %>
	</p>
	<p>
		<%= f.label :dod, 'Date of death' %>
		<%= f.text_field :dod, :placeholder => 'YYYY-MM-DD' %>
	</p>
	<p>
		<%= f.label :nationality %>
		<%= f.text_field :nationality %>
	</p>
	<p>
		<%= f.label :image %>
		<%= f.url_field :image %>
	</p>

	<%= f.submit :class => 'submit' %>

<% end %>